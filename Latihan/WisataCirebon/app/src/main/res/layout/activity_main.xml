<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/write"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home"
            android:src="@drawable/profil"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <ImageView
            android:id="@+id/portal"
            android:layout_marginLeft="70dp"
            android:src="@drawable/portal"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Profil Wisata"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginLeft="50dp"
            android:text="Portal Wisata"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lokasi"
            android:src="@drawable/lokasi"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <ImageView
            android:id="@+id/vidio"
            android:layout_marginLeft="70dp"
            android:src="@drawable/vidio"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Lokasi Wisata"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginLeft="50dp"
            android:text="Vidio Wisata"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/galeri"
            android:src="@drawable/galeri"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <ImageView
            android:id="@+id/tentang"
            android:layout_marginLeft="70dp"
            android:src="@drawable/tentang"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Galeri"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="100dp"
            android:text="Tentang"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>


</LinearLayout>