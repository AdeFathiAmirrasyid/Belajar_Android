<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".intro.IntroFragment">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:id="@+id/TextTim1"
            android:layout_marginTop="40dp"
            android:backgroundTintMode="src_atop"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:hint="Tim 1"
            />


        <EditText
            android:id="@+id/TextTim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTintMode="src_atop"
            android:ems="12"
            android:hint="Tim 2"
            app:layout_constraintStart_toStartOf="@+id/TextTim1"
            app:layout_constraintTop_toBottomOf="@+id/TextTim1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Masukan Nama Tim"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BtnMulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="Mulai"
            app:layout_constraintStart_toStartOf="@+id/TextTim2"
            app:layout_constraintTop_toBottomOf="@+id/TextTim2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>